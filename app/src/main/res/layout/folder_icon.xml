<?xml version="1.0" encoding="utf-8"?>
<com.xiong.launcher.ui.FolderIcon xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false" 
    android:gravity="center"
    >
    <com.xiong.launcher.ui.CellLayout 
        android:id="@+id/folder_preview_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/folder_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/folder_icon_padding"
        android:gravity="center"
        android:textColor="@color/apps_customize_icon_text_color"
        android:shadowRadius="4.0"
        android:shadowColor="#FF000000"/>

</com.xiong.launcher.ui.FolderIcon>